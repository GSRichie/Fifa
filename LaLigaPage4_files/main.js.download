var main, clickable;

function init(){
	console.log("INIT")
	//SET ELEMENT VARIABLES FOR ACCESS (NOT ALWAYS NEEDED FOR SIMPLE EXECUTIONS WHEN USING TweenMax)
	main = document.getElementById("viewport");
	clickable = document.getElementById("clickable");
	console.log(main);
	eventListeners();
  	trackClips();
  	TweenLite.defaultEase = Power2.easeInOut;
}
function trackClips(){
	// SET ELEMENT INITIAL PROPERTY VALUES HERE
	TweenMax.set(border, {alpha:1})
	frameOne();
}
function eventListeners(){
	console.log("Setting Buttons");
	clickable.style.cursor = "pointer"
	// clickable.addEventListener("click", mainExit, false);
	clickable.addEventListener("mouseover", animateSheen, false);
	clickable.addEventListener("mouseout", setSheen, false);
}

function frameOne(){
	TweenMax.set([bg, frame, logo, vehicle], {alpha:1})
	TweenMax.set(cta, {scale: 1.1})
	TweenMax.from(vehicle, 0.5, {alpha: 0, x:50, ease: Power2.easeOut})
	TweenMax.fromTo(text1a, 0.5, {x:-300, alpha:1}, {x:0})
	TweenMax.fromTo(text1b, 0.5, {x:300, alpha:1}, {x:0})
	
	TweenMax.delayedCall(3.5, frameTwo);
}
function frameTwo(){
	TweenMax.to(text1a, 0.5, {x:-300})
	TweenMax.to(text1b, 0.5, {x:300})

	TweenMax.fromTo(text2a, 0.5, {x:-300, alpha:1}, {x:0, delay:0.25})
	TweenMax.fromTo(text2b, 0.5, {x:300, alpha:1}, {x:0, delay:0.25})


	TweenMax.delayedCall(3.8, frameThree)
}
function frameThree(){
	TweenMax.to(text2a, 0.5, {x:-300})
	TweenMax.to(text2b, 0.5, {x:300})

	TweenMax.fromTo(text3a, 0.5, {x:-300, alpha:1}, {x:0, delay:0.25})
	TweenMax.fromTo(text3b, 0.5, {x:300, alpha:1}, {x:0, delay:0.25})
	TweenMax.delayedCall(3.8, frameFour)
}
function frameFour(){
	TweenMax.to(text3a, 0.5, {x:-300})
	TweenMax.to(text3b, 0.5, {x:300})

	TweenMax.fromTo(text4a, 0.5, {x:-300, alpha:1}, {x:0, delay:0.25})
	TweenMax.fromTo(text4b, 0.5, {x:300, alpha:1}, {x:0, delay:0.25})

	TweenMax.delayedCall(3.8, frameFive)
}
function frameFive(){
	TweenMax.to(text4a, 0.5, {x:-300})
	TweenMax.to(text4b, 0.5, {x:300})

	TweenMax.fromTo(textffa, 0.5, {x:-300, alpha:1}, {x:0, delay:0.25})
	TweenMax.fromTo(textffb, 0.5, {x:300, alpha:1}, {x:0, delay:0.25})

	TweenMax.to(logo, 0.5, {x:-78, y:-1});
	TweenMax.fromTo(cta, 0.5, {x:300, alpha:1}, {x:0, delay:0.5, onComplete:animateSheen})
}

function animateSheen(){
	TweenMax.to(sheen, 0.5, {x:250, onComplete:setSheen})
}
function setSheen(){
	TweenMax.set(sheen, {x:0, alpha:1})
}

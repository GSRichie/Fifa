
window.onload = function () {
  CSSPlugin.defaultTransformPerspective=400;

  TweenLite.set("#content", {autoAlpha:1});
  TweenLite.set("#t1", {autoAlpha:0});
  TweenLite.set("#t2", {autoAlpha:0});
  TweenLite.set("#t3", {autoAlpha:0});
  TweenLite.set("#legal", {autoAlpha:0});
  TweenLite.set("#legal-btn", {autoAlpha:0});
  TweenLite.set("#bg", {autoAlpha:0});
  TweenLite.set("#cta", {autoAlpha:0});
  TweenLite.set("#cta-arrow", {autoAlpha:0});
  TweenLite.set("#line1", {height:0});
  TweenLite.set("#line2", {width:0});
  TweenLite.set("#line3", {height:0});

  TweenLite.delayedCall(0.1, scene1);
};

function scene1(e){
  TweenLite.to("#bg", .5, {autoAlpha:1});
  TweenLite.to("#legal", .5, {autoAlpha:1});
  TweenLite.to("#legal-btn", .5, {autoAlpha:1});
  TweenLite.delayedCall(0.5, drawLine);
  TweenLite.to("#cta", .8, {autoAlpha:1,delay:1.3});
}

function drawLine(e){
  TweenLite.to("#line1", .5, {ease: Expo.easeOut,height:157});
  TweenLite.to("#line2", .5, {ease: Expo.easeIn,width:914,delay:0.4});
  TweenLite.to("#line3", .5, {ease: Expo.easeOut,height:157,delay:1});
  TweenLite.delayedCall(1.3, scene2);
}

function scene2(e){
  TweenLite.to("#t1", .6, {autoAlpha:1, delay:0.5});
  // TweenLite.to("#t2", .6, {autoAlpha:1, delay:1.4});
  TweenLite.delayedCall(3, scene3);
}

function scene3(e){
  TweenLite.to("#t1", .6, {autoAlpha:0});
  TweenLite.to("#bg2", .5, {autoAlpha:1});
  // TweenLite.to("#t2", .6, {autoAlpha:0});
  TweenLite.to("#t3", .6, {autoAlpha:1,delay:0.7});
  TweenLite.to("#jdpower", .6, {autoAlpha:1,delay:1});
  // TweenLite.to("#cta", .8, {autoAlpha:1,delay:1.3});
}

function showLegal()
{
  TweenLite.to("#legal-popup", .2, {autoAlpha:1});
  TweenLite.to("#legal-content", .2, {autoAlpha:1});
}


function closeLegal()
{
  TweenLite.to("#legal-popup", .2, {autoAlpha:0});
  TweenLite.to("#legal-content", .2, {autoAlpha:0});
}
